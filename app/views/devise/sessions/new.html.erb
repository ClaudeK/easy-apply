<h1 align= "center" style="color:white">EasyApply</h1><br/>
<h3 align = "center" style = "color:white"> Applying for College made Easy!! </h3>
<div class = "center hero-unit">

<div style=" padding-left: 25%; padding-bottom: 5%; border-width:4px; 
             border-style:inset; border-radius:10px 10px 10px 10px;" >
    <div >
		<h2>Sign in</h2>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

          <%= devise_error_messages! %>

		  <p><div><%= f.label :email %><br />
		  <%= f.email_field :email, :autofocus => true %></div></p>

		  <div><%= f.label :password %><br />
		  <%= f.password_field :password %></div>
		  
          &nbsp

		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.check_box :remember_me %> <p><%= f.label :remember_me %></div>
		  <% end -%>

		  <div><%= f.submit "Sign in" %></div>
		<% end %>
        &nbsp

		<p><%= render "devise/shared/links" %></p>
		</div>
    </div>
</div>
